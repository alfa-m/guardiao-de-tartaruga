def valores_unicos_chave(lista_dicionarios, chave):
    valores_unicos = set()
    for dicionario in lista_dicionarios:
        if chave in dicionario:
            valores_unicos.add(dicionario[chave])
    return valores_unicos

def total_ninhos(lista_de_ninhos):
    if len(lista_de_ninhos) != 0:
        print('Total de ninhos registrados:', len(lista_de_ninhos))
    else:
        print("Não há nenhum ninho registrado.")

def total_ovos(lista_de_ninhos):
    if len(lista_de_ninhos) != 0:
        total_ovos = sum(ninho['quantidade_ovos'] for ninho in lista_de_ninhos)
        print('Total de ovos registrados:', total_ovos)
    else:
        print("Não há ninhos registrados para contar os ovos.")

def total_ovos_por_regiao(lista_de_ninhos, regiao):
    valores_unicos_regiao = valores_unicos_chave(lista_de_ninhos, 'regiao')
    if regiao in valores_unicos_regiao:
        lista_ninhos_regiao = [ninho for ninho in lista_de_ninhos if ninho['regiao'] == regiao]
        print(f"Região '{regiao}'")
        total_ovos(lista_ninhos_regiao)
    else:
        print(f"Nenhum ninho registrado na região '{regiao}' ou região inválida.")

def total_ovos_regiao(lista_de_ninhos):
    lista_regioes = valores_unicos_chave(lista_de_ninhos, 'regiao')
    for regiao in lista_regioes:
        total_ovos_por_regiao(lista_de_ninhos, regiao)

def total_ovos_por_status(lista_de_ninhos, status):
    valores_unicos_status = valores_unicos_chave(lista_de_ninhos, 'status')
    if status in valores_unicos_status:
        lista_ninhos_status = [ninho for ninho in lista_de_ninhos if ninho['status'] == status]
        print(f"Status '{status}'")
        total_ovos(lista_ninhos_status)
    else:
        print(f"Nenhum ninho registrado com o status '{status}' ou status inválido.")

def total_ovos_status(lista_de_ninhos):
    lista_status = valores_unicos_chave(lista_de_ninhos, 'status')
    for status in lista_status:
        total_ovos_por_status(lista_de_ninhos, status)

def total_ovos_por_risco(lista_de_ninhos, risco):
    valores_unicos_risco = valores_unicos_chave(lista_de_ninhos, 'risco')
    if risco in valores_unicos_risco:
        lista_ninhos_risco = [ninho for ninho in lista_de_ninhos if ninho['risco'] == risco]
        print(f"Risco '{risco}'")
        total_ovos(lista_ninhos_risco)
    else:
        print(f"Nenhum ninho registrado com o risco '{risco}' ou risco inválido.")

def total_ovos_risco(lista_de_ninhos):
    lista_riscos = valores_unicos_chave(lista_de_ninhos, 'risco')
    for risco in lista_riscos:
        total_ovos_por_risco(lista_de_ninhos, risco)

def total_ovos_por_predadores(lista_de_ninhos, predadores):
    valores_unicos_predadores = valores_unicos_chave(lista_de_ninhos, 'predadores')
    if predadores in valores_unicos_predadores:
        lista_ninhos_predadores = [ninho for ninho in lista_de_ninhos if ninho['predadores'] == predadores]
        print(f"Predadores '{predadores}'")
        total_ovos(lista_ninhos_predadores)
    else:
        print(f"Nenhum ninho registrado com os predadores '{predadores}' ou predador inválido.")

def total_ovos_predadores(lista_de_ninhos):
    lista_predadores = valores_unicos_chave(lista_de_ninhos, 'predadores')
    for predador in lista_predadores:
        total_ovos_por_predadores(lista_de_ninhos, predador)

def media_ovos(lista_de_ninhos):
    if len(lista_de_ninhos) != 0:
        total_ovos = sum(ninho['quantidade_ovos'] for ninho in lista_de_ninhos)
        media = total_ovos / len(lista_de_ninhos)
        print(f'Média de ovos por ninho: {media:.2f}')
    else:
        print("Não há ninhos registrados para calcular a média.")

def media_ovos_por_regiao(lista_de_ninhos, regiao):
    valores_unicos_regiao = valores_unicos_chave(lista_de_ninhos, 'regiao')
    if regiao in valores_unicos_regiao:
        lista_ninhos_regiao = [ninho for ninho in lista_de_ninhos if ninho['regiao'] == regiao]
